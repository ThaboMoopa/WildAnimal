<GridPane alignment="center" hgap="10" prefWidth="277.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.PlayController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox alignment="CENTER" prefHeight="293.0" prefWidth="393.0">
         <children>
            <Label text="Name the animal">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <ImageView fx:id="imageView" fitHeight="126.0" fitWidth="276.0" pickOnBounds="true" preserveRatio="true" />
            <Label prefHeight="17.0" prefWidth="229.0" text="Label">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtAnswer" />
            <Button fx:id="btnAnswer" mnemonicParsing="false" onAction="#buttonPressed" prefHeight="27.0" prefWidth="122.0" text="Next" />

         </children></VBox>
   </children>
</GridPane>
